<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryPurple"
    android:gravity="bottom"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText_email"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/colorBackgroundWhite"
            android:foregroundTint="@color/colorBackgroundWhite"
            android:hint="Email"
            android:inputType="textAutoComplete"
            android:shadowColor="@color/colorBackgroundWhite"
            android:textColor="@color/colorBackgroundWhite"
            android:textColorHighlight="@color/colorBackgroundWhite"
            android:textColorHint="@color/colorBackgroundWhite"
            android:textColorLink="@color/colorBackgroundWhite" />

        <EditText
            android:id="@+id/editText_password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/colorBackgroundWhite"
            android:foregroundTint="@color/colorBackgroundWhite"
            android:hint="Password"
            android:inputType="numberPassword"
            android:shadowColor="@color/colorBackgroundWhite"
            android:textColor="@color/colorBackgroundWhite"
            android:textColorHighlight="@color/colorBackgroundWhite"
            android:textColorHint="@color/colorBackgroundWhite"
            android:textColorLink="@color/colorBackgroundWhite" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


        <Button
            android:id="@+id/login_button"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="Login in" />

        <!--<com.facebook.login.widget.LoginButton-->
        <!--android:id="@+id/login_button_face"-->
        <!--android:layout_width="172dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_marginBottom="16dp" />-->


        <View
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorBackgroundWhite" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/no_account_sign_up"
            android:textColor="@color/colorBackgroundWhite"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/textView_lostPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/lost_password"
            android:textColor="@color/colorBackgroundWhite"
            android:textSize="12sp" />


    </LinearLayout>


</LinearLayout>
