<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    android:foregroundTint="#000000"
    android:gravity="bottom"
    android:orientation="vertical">


    <ImageView

        android:id="@+id/image_logo"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:src="@drawable/nfc2"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="16dp"
            android:backgroundTint="@color/colorBackgroundWhite"
            android:foregroundTint="@color/colorBackgroundWhite"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:shadowColor="@color/colorBackgroundWhite"
            android:textColor="@color/colorBackgroundWhite"
            android:textColorHighlight="@color/colorBackgroundWhite"
            android:textColorHint="@color/colorBackgroundWhite"
            android:textColorLink="@color/colorBackgroundWhite" />

        <EditText
            android:id="@+id/editText_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="16dp"
            android:backgroundTint="@color/colorBackgroundWhite"
            android:foregroundTint="@color/colorBackgroundWhite"
            android:hint="Password"
            android:inputType="numberPassword"
            android:maxLength="6"
            android:shadowColor="@color/colorBackgroundWhite"
            android:textColor="@color/colorBackgroundWhite"
            android:textColorHighlight="@color/colorBackgroundWhite"
            android:textColorHint="@color/colorBackgroundWhite"
            android:textColorLink="@color/colorBackgroundWhite" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">


        <Button
            android:background="#FFFFFF"
            android:id="@+id/login_button"
            android:layout_width="172dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="Login in" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/no_account_sign_up"
            android:textColor="@color/colorBackgroundWhite"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/textView_lostPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/lost_password"
            android:textColor="@color/colorBackgroundWhite"
            android:textSize="12sp" />


    </LinearLayout>


</LinearLayout>
